{{#story}}

<div class="container">
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">

			<div class="row">
				<div class="col-sm-9">
					<h1>{{title}}</h1>
				</div>
				<div class="col-sm-3 text-right">
					<h1><small><i class="fa fa-users"></i>
						<span class="stand-with-count">{{stand_with_count}}</span></small></h1>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-12">
					<img class="img-feature" src="{{image1}}">
					{{#each paragraphs}}
						<p>{{this}}</p>
					{{/each}}
				</div>
			</div>

			<div class="row">
				<div class="col-sm-12">
					<button type="button" class="show-support-btn btn btn-primary btn-lg btn-block" story-id="{{_id}}">
						<span class="fa fa-users"></span>
						<strong><span class="stand-with-count">
							{{stand_with_count}}
						</span></strong>
						<span class="support-cta">
							Show your support!
						</span>
						<span class="supported-msg" style="display: none;">
							people support this story
						</span>
					</button>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-7">
					<strong> Created on: </strong> {{created_date}} <br/>
					<strong> Updated on: </strong> {{updated_date}} <br/>
					<strong>#<u>clickable</u> #<u>tags</u> #<u>go</u> #<u>here</u>
				</div>
				<div class="col-sm-5 text-right">
					<h1>
						<i class="fa fa-facebook-square"></i>
						<i class="fa fa-twitter-square"></i>
						<i class="fa fa-tumblr-square"></i>
					</h1>
				</div>
			</div>


		</div>
	</div>
</div>
{{/story}}

<script src="/js/show_support.js"></script>